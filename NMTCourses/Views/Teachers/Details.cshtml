@model NMTCourses.Models.Teacher

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі про викладача</h1>

<div class="card" style="border: 2px solid black; border-radius: 5px;">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.PhotoUrl" alt="Фото викладача" class="img-fluid" style="max-height: 300px; width: auto; border-radius: 5px;" />
        </div>
        <div class="col-md-8">
            <h2 style="color: blue; margin-bottom: 20px;">@Model.FirstName @Model.LastName</h2>
            <dl class="row">
                <dt class="col-sm-4">Біографія:</dt>
                <dd class="col-sm-8">@Model.Bio</dd>
                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-outline-dark">Редагувати</a> |
    <a asp-action="Index" class="btn btn-outline-dark">Назад до списку викладачів</a>
</div>
