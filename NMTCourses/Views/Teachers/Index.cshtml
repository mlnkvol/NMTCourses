@model IEnumerable<NMTCourses.Models.Teacher>

<h1>Список викладачів</h1>

<table class="table">
    <thead>
        <tr>
            <th>Фото</th>
            <th>Ім'я</th>
            <th>Призвище</th>
            <th>Біографія</th>
            <th>Email</th>
            <th>Дії</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>
                    <img src="@teacher.PhotoUrl" alt="Фото @teacher.FirstName @teacher.LastName" class="teacher-photo" />
                </td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Bio</td>
                <td>@teacher.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "Teachers", new { id = teacher.ID })">Редагувати</a> |
                    <a href="@Url.Action("Details", "Teachers", new { id = teacher.ID })">Деталі</a> |
                    <a href="@Url.Action("Delete", "Teachers", new { id = teacher.ID })">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
