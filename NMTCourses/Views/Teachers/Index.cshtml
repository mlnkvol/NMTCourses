@model IEnumerable<NMTCourses.Models.Teacher>

<h1>Список викладачів</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-dark" style="color: black; background-color: white;">Додати викладача</a>
</p>

<div class="row">
    @foreach (var teacher in Model)
    {
        <div class="col-md-4 d-flex justify-content-center mb-4">
            <div class="card border-dark" style="width: 18rem;">
                <!-- Встановлено однаковий розмір картки -->
                <img src="@teacher.PhotoUrl" alt="Фото @teacher.FirstName @teacher.LastName" class="card-img-top" />
                <div class="card-body">
                    <h4 class="card-title">@teacher.FirstName @teacher.LastName</h4>
                    <p class="card-text">
                        <strong>Email:</strong> @teacher.Email
                    </p>
                    <div class="d-flex flex-column gap-2">
                        <!-- Збільшено відстань між кнопками -->
                        <a asp-action="Details" asp-route-id="@teacher.ID" class="btn btn-outline-dark">Переглянути деталі</a>
                        <a asp-action="Edit" asp-route-id="@teacher.ID" class="btn btn-outline-dark">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@teacher.ID" class="btn btn-outline-dark" onclick="return confirm('Ви впевнені, що хочете видалити цього викладача?');">Видалити</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .btn-outline-dark {
        color: black;
        background-color: white;
        border: 1px solid black;
        transition: background-color 0.3s ease; /* Додана анімація при наведенні */
    }

        .btn-outline-dark:hover {
            background-color: #b2e0ff; /* Світло-голубий колір при наведенні */
        }

    .card {
        border-color: black; /* Чорна обводка картки */
        height: 100%; /* Задаємо висоту для однакових карток */
    }

    .card-header {
        font-weight: bold;
    }

    .d-flex {
        justify-content: space-between; /* Вирівнюємо кнопки по боках */
    }
</style>
